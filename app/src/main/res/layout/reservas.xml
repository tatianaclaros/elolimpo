<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Nombres:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ingrese sus nombres" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Apellidos:"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Ingrese sus apellidos" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Celular:"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="phone"
            android:hint="Ingrese su número de celular" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico:"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/input_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textEmailAddress"
            android:hint="Ingrese su correo electrónico" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_fecha"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_hora"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora" />

        <Button
            android:id="@+id/btn_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/black"
            android:padding="10dp"
            android:text="confirmar cita" />

        <Button
            android:id="@+id/inicio"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/black"
            android:padding="10dp"
            android:text="Ir a productos" />


        <Button
            android:id="@+id/inicio_"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/black"
            android:padding="10dp"
            android:text="Volver a inicio" />

    </LinearLayout>

</ScrollView>
